{
  "manifest_version": 3,
  "name": "On Record",
  "short_name": "On Record",
  "version": "0.1.2",
  "description": "A selected area of your tab is put on record.",
  "permissions": ["activeTab", "scripting", "downloads", "tabCapture", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "On Record"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Activate the extension"
    }
  }
}
